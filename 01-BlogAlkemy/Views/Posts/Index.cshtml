@model IEnumerable<_01_BlogAlkemy.Models.ViewModel.PostGetAllModel>

@{
    ViewData["Title"] = "Index";
}

<nav class="navbar navbar-light bg-light">
    <div class="container-fluid">
        <div>
            <h4 class="h4">Publicaciones</h4>
            <a class="btn btn btn-outline-primary ml-2" asp-action="Create">Nuevo</a>
        </div>
        <form class="d-flex" asp-action="Index" method="post">
            <input class="form-control mr-2" id="filtrar" name="filtrar" type="search" placeholder="Buscar" aria-label="Search">
            <button class="btn btn-outline-success" type="submit">Buscar</button>
        </form>
    </div>
</nav>
<table class="table">
    <thead>
        <tr>
            @*<th>
                Id
            </th>*@
            <th>
                Titulo
            </th>
            @*<th>
                Imagen
            </th>
            <th>
                Fecha de Creación
            </th>*@
            <th>
                Categoria
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            @*<td>
                @Html.DisplayFor(modelItem => item.IdPost)
            </td>*@
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            @*<td>
                @Html.DisplayFor(modelItem => item.Image)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreationDate)
            </td>*@
            <td>
                @Html.DisplayFor(modelItem => item.Category.Name)
            </td>
            <td>
                <a class="btn-sm btn-info" asp-action="Details" asp-route-id="@item.IdPost">Detalle</a>
                <a class="btn-sm btn-warning" asp-action="Edit" asp-route-id="@item.IdPost">Editar</a>
                <a class="btn-sm btn-danger" asp-action="Delete" asp-route-id="@item.IdPost">Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>
