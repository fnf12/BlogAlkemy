@model _01_BlogAlkemy.Models.Post

@{
    ViewData["Title"] = "Delete";
}
<div>
    <a class="btn btn-secondary" asp-action="Index">Volver</a>
</div>
<br />
<h4>Eliminar</h4>
<h4>Publicación</h4>
<hr />
<div>
    <dl class="row">
        <dt class="col-sm-2">
            Titulo
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class="col-sm-2">
            Contenido
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Content)
        </dd>
        <dt class="col-sm-2">
            Imagen
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Image)
        </dd>
        <dt class="col-sm-2">
            Fecha de Creación
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CreationDate)
        </dd>
        <dt class="col-sm-2">
            Categoría
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Category.Name)
        </dd>
    </dl>
    <h5>¿Estas seguro de eliminar?</h5>
    <form asp-action="Delete">
        <input type="hidden" asp-for="IdPost" />
        <input type="submit" value="Aceptar" class="btn btn-danger" /> |
        <a class="btn btn-dark" asp-action="Index">Cancelar</a>
    </form>
</div>
