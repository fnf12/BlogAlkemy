@model _01_BlogAlkemy.Models.Post

@{
    ViewData["Title"] = "Details";
}

<div>
    <a class="btn btn-outline-secondary" asp-action="Index">Volver</a>
</div>
<br />

<h4>Detalle de</h4>
<h4>Publicación</h4>
<hr />
<div>
    <dl class="row">
        <dt class="col-sm-2">
            Titulo
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class="col-sm-2">
            Contenido
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Content)
        </dd>
        <dt class="col-sm-2">
            Imagen
        </dt>
        <dd class="col-sm-10">
            <img src="/uploads/@Html.DisplayFor(model => model.Image)" height="100" alt="@Html.DisplayFor(model => model.Image)">
        </dd>
        <dt class="col-sm-2">
            Fecha de Creacion
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CreationDate)
        </dd>
        <dt class="col-sm-2">
            Categoria
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Category.Name)
        </dd>
    </dl>
</div>
<div>
    <a class="btn btn-warning" asp-action="Edit" asp-route-id="@Model.IdPost">Editar</a>
</div>
